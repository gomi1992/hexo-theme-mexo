ul.search-result-list {
  padding-left: 0px;
  margin: 0px 5px 0px 8px;
  li {
    border-bottom: 1px dashed #ccc;
    padding: 10px 0;
  }
}

p.search-result {
  padding: 5px 0;
  margin: 0;
  word-wrap: break-word;
}

a.search-result-title {
  font-weight: bold;
}

a.search-result {
  border-bottom: transparent;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.search-keyword {
  border-bottom: 1px dashed #f00;
  font-size: 14px;
  font-weight: bold;
  color: #f00;
}

#local-search-result {
  height: 88%;
  overflow: auto;
  h2 {
    color: #d8d8d8;
    padding: 10px;
  }
}

.popup {
  display: none;
  position: fixed;
  top: 10%;
  left: 50%;
  width: 700px;
  max-height: 80%;
  min-height: 120px;
  margin-left: -350px;
  padding: 10px 20px;
  background: #fff;
  color: #333;
  z-index: 9999;
  overflow-y: auto;
  /*border-radius: 5px;*/
  +mobile() {
    padding: 0;
    top: 0;
    left: 0;
    margin: 0;
    width: 100%;
    max-height: 90%;
    overflow-y: hidden;
    /*border-radius: 0px;*/
  } //  box-shadow: 0 0 0 9999px rgba(0,0,0,0.5);
}

.popoverlay {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  left: 0px;
  z-index: 2080;
  background-color: rgba(0, 0, 0, 0.3);
  overflow: hidden;
  display: none;
}

#local-search-input {
  margin-bottom: 10px;
  padding: 10px;
  width: 97%;
  font-size: 18px
  +mobile() {
    padding-left: 0;
    padding-right: 0;
  }
}

.popup .fa-search {
  padding-top: 15px;
  +mobile() {
    display: none;
  }
}

.popup-btn-close {
  position: absolute;
  top: 8px;
  right: 10px;
  color: #cacaca;
  font-size: 14px;
  font-weight: bold;
  text-transform: uppercase;
  cursor: pointer;
  &:hover {
    color: black;
  }
}

.btn-close {
  position: absolute;
  top: 5px;
  right: 5px;
  display: none;
  +mobile() {
    display: block;
  }
}

#no-result {
  position: absolute;
  left: 44%;
  top: 42%;
  color: #ccc;
}
